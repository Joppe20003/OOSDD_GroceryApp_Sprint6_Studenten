<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="NewProductView">
    <StackLayout Padding="20" VerticalOptions="Center">
        <Label Text="Product maken" FontSize="24" HorizontalOptions="Center"/>
        <Entry Placeholder="Naam" Text="{Binding Name}" Keyboard="Text"/>
        <Entry Placeholder="Voorraad" Text="{Binding Stock}" Keyboard="Text"/>
        <Entry Placeholder="THT Datum" Text="{Binding Date}" Keyboard="Text"/>
        <Entry Placeholder="Prijs" Text="{Binding Price}" Keyboard="Text"/>
        <Button Text="Maken" Command="{Binding AddNewProductCommand}"/>
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />
    </StackLayout>
</ContentPage>
